{
  "compilerOptions": {
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2015.promise"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/domair/*", "src/car/*", "src/main/*",  "src/visa/*", "src/admin/*", "src/intair/*", "src/zas/*", "src/vendor/*"],
      "@Base/*": ["src/base/*"],
      "bee-ui/*": ["src/base/components/lib/*"]
    },
    "resolveJsonModule": true
  }
}
